<%= javascript_include_tag Ckeditor.cdn_url %>
<h3>Question</h3>

<%= form_for form, as: :question, url: url, method: method do |f| %>
  <%- unless form.errors.empty? %>
    <ul>
      <%- form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :type %>
  <%= f.select :type, ::Rapidfire::QuestionForm::QUESTION_TYPES, {}, id: "question_type" %><br>

  <%= f.label :question_text, "질문 제목" %>
  <%= f.text_field :question_text, placeholder: "ex) 강의는 어땠나요?" %>

  <%= f.label :answer_options, "답변 선택지" %><br>
  <%= f.text_area :answer_options, placeholder: "ex)\n1. 좋은 강의였다.\n2. 나쁜 강의였다.", style: "background-color: transparent; height: 2rem; width: 100%; transition: all .3s; height:150px;" %>

  <h4>Other options</h4>
  <hr/>

  <%= f.label :answer_presence, "답변 필수" %>
  <%= f.check_box :answer_presence %><br>

  <%= f.label :answer_minimum_length %>
  <%= f.text_field :answer_minimum_length %>

  <%= f.label :answer_maximum_length %>
  <%= f.text_field :answer_maximum_length %>

  <%= f.label :answer_greater_than_or_equal_to %>
  <%= f.text_field :answer_greater_than_or_equal_to %>

  <%= f.label :answer_less_than_or_equal_to %>
  <%= f.text_field :answer_less_than_or_equal_to %>

  <%= f.submit submit_text %>
<% end %>
