<!--<h2>Forgot your password?</h2>-->

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <h1 id="litheader"><img style="width:60%" src="<%= image_url("likelion-white-a930fbcdf3042a50ba882ece9c02f43536971297a8e143e212d9b92d653bfa44.png") %>" alt="Likelion text b7b5aed6954af442181e1a7b82bf265963638a731bcfd839f343845c28a0947f"></h1>
  <%= devise_error_messages! %>

  <div class="inset">
    <%= f.email_field :email, placeholder: "이메일", autofocus: true, id: "email" %>
  </div>
  <p class="p-container">
    <%= f.submit "비밀번호 확인메일 보내기" %>
    <%= link_to "로그인하기", new_session_path(resource_name) %>
  </p>
<% end %>

